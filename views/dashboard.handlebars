<section id="create-new-post">
    <h2>Create A New Post</h2>
    <form class="new-post-form">
        <div>
            <label for="post-title">title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">post</label>
            <input id="post-content" name="post-content" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>


{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<button id="new-post-btn" class="btn-no-style">+ New Post</button>
<script src="/javascript/add-post.js"></script>